.event
  width 640px
  float left
  height 300px
  background white
  position relative
  .article-icon
    absolute top 40px
    width 40px
    height 40px
    background $light-green url('../images/calendar.png') center
  .content-block
    float left
    height 100%
    width 415px
    .content
      padding 22px 30px 40px 60px
      .date
        font-size 14px
        color $light-green
      h1
        font-weight normal
        margin 0 0 27px 0
        font-size 24px
      .text
        font-size 14px
        color #484848
        margin-bottom 10px
      a
        color $light-green
        font-size 14px
        width 105px
        display block
        background url("../images/arrow-green.png") right center
        &:hover
          color $gray
  img
    float left
    width 225px
    padding 12px 15px 13px 15px