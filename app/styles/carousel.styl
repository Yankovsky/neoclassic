@import 'nib'

.carousel
  position relative
  &:hover
    .carousel-control
      opacity 1

  > .carousel-indicators
    absolute left right
    margin auto
    text-align center
    z-index 1
    > li
      display inline-block
      cursor pointer

  > .carousel-inner
    position relative
    width 100%
    height 100%
    overflow hidden
    > .item
      position relative
      display none
      transition 1s ease-in-out left
      width 100%
      height 100%
      &.active
        left 0
        &.left
          left -100%
        &.right
          left 100%
      &.next
        left 100%
      &.prev
        left -100%
      &.active, &.next, &.prev
        display block
      &.next, &.prev
        absolute top
        width 100%
      &.next.left,
      &.prev.right
        left 0

  > .carousel-control
    absolute top bottom
    margin auto
    cursor pointer
    opacity 0
    transition opacity 0.2s ease-out
    width 34px
    height 52px
    box-sizing border-box
    background #eee no-repeat center
    &.left
      left 0
      border-radius 0 2px 2px 0
      background-image url('../images/left-arrow.png')
    &.right
      right 0
      border-radius 2px 0 0 2px
      background-image url('../images/right-arrow.png')
    &:hover, &:focus
      background-color #fff