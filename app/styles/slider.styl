@import 'nib'

.slider
  .carousel
    margin-bottom 20px
    border 1px solid #a9c421
    height 540px
    box-sizing border-box

    > .carousel-indicators
      top 500px
      > li
        width 10px
        height 10px
        margin-left 5px
        border-radius 5px
        border 1px solid #a9c421
        cursor pointer
        &.active, &:hover, &:focus
          background-color #a9c421

    > .carousel-inner
      > .item
        background url("../images/logo.png") no-repeat 50px 30px
        p
          color #fff
          font-size 14px
          line-height  20px
          absolute left 110px top 260px
          width 465px
          overflow hidden
        a
          absolute left 110px top 420px
          text-decoration none
          width 170px
          height 50px
          border 1px solid #abc526
          border-radius 2px
          color #a9c420
          font-size 16px
          text-align center
          line-height 50px
        img
          absolute right bottom top
          margin auto

    > .carousel-control
      width 34px
      height 52px
      background #eee no-repeat center
      &.left
        border-radius 0 2px 2px 0
        background-image url('../images/left-arrow.png')
      &.right
        border-radius 2px 0 0 2px
        background-image url('../images/right-arrow.png')
      &:hover, &:focus
        background-color #fff
