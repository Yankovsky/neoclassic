form(ng-controller='AdminSeoCtrl', name='seoForm', ng-submit='seoForm.$valid && save()', novalidate, ng-if='currentUser')
  .admin
    div
      label(for='title') Заголовок
      input(type='text', name='title', ng-model='seo.title', required)
    div
      label(for='description') Описание
      textarea(name='description', ng-model='seo.description', required)
    div
      label(for='keywords') Ключевые слова
      textarea(name='keywords', ng-model='seo.keywords', required)

    input(type='submit', ng-disabled='!seoForm.$valid', value='сохранить изменения')