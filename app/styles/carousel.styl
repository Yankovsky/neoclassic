@import 'nib'

.carousel
  position relative
  &:hover
    .carousel-control
      opacity 1

  > .carousel-indicators
    absolute left right
    margin auto
    text-align center
    z-index 1
    list-style none
    > li
      display inline-block
      cursor pointer

  > .carousel-inner
    position relative
    width 100%
    height 100%
    overflow hidden
    > .item
      position relative
      display none
      transition 0.6s ease-in-out left
      width 100%
      height 100%
      &.active
        left 0
        &.left
          left -100%
        &.right
          left 100%
      &.next
        left 100%
      &.prev
        left -100%
      &.active, &.next, &.prev
        display block
      &.next, &.prev
        absolute top
        width 100%
      &.next.left,
      &.prev.right
        left 0

  > .carousel-control
    absolute top bottom
    margin auto
    cursor pointer
    opacity 0
    transition opacity 0.2s ease-out
    &.left
      left 0
    &.right
      right 0