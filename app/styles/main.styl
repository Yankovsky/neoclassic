body
  width 960px
  background black
  margin 0 auto
  font-family "Open Sans", "Arial", "Helvetica", sans-serif
  overflow-y scroll;

.active
  pointer-events none
  cursor default
  *
    pointer-events auto

.clearfix
  clearfix()

.background-white
  background white

ul, ol
  padding 0
  margin 0
  list-style none

input
  box-sizing border-box
  &[type='text']
    width 200px

.error
  color #ff7f50