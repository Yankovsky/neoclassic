.slider
  margin-bottom $margin
  .carousel
    border 1px solid $light-green
    height 540px
    box-sizing border-box

    > .carousel-indicators
      top 500px
      > li
        circle(10px)
        margin-left 5px
        border 1px solid $light-green
        cursor pointer
        &.active, &:hover, &:focus
          background-color $light-green

    > .carousel-inner
      > .item
        background url("../images/logo-big.jpg") no-repeat 50px 30px
        p
          color white
          font-size 14px
          line-height  20px
          absolute left 110px top 260px
          width 465px
          overflow hidden
        a
          absolute left 110px top 420px
          text-decoration none
          width 170px
          height 50px
          border 1px solid $light-green
          border-radius 2px
          color $light-green
          font-size 16px
          text-align center
          line-height 50px
        img
          absolute right bottom top
          margin auto