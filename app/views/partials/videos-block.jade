article.videos-block(ng-controller='VideosBlockCtrl')
  youtube-player
  carousel(interval='-1')
    slide(ng-repeat='(i, fourVideos) in videosGroupedByFour', active='fourVideos.active')
      ol.clearfix
        li(ng-repeat='video in fourVideos', title='{{video.title}}')
          a(href='', ng-click='playVideo(video.id)')
            img(ng-src='{{video.thumbnail}}')